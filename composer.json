{
    "name": "penneo/penneo-sdk-php",
    "type": "library",
    "homepage": "https://penneo.com",
    "description": "Penneo SDK for PHP",
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "Penneo\\SDK\\": "src/",
            "Penneo\\SDK\\Tests\\Integration\\": "tests/integration/Context",
            "Penneo\\SDK\\Tests\\Unit\\": "tests/unit"
        }
    },
    "require": {
        "php": "^7.2|^8.0",
        "psr/log": "^1.0|^2.0|^3.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2",
        "nesbot/carbon": "^2.71",
        "ext-openssl": "*"
    },
    "require-dev": {
        "behat/behat": "^3.8",
        "phpunit/phpunit": "^8.5|^9.0",
        "squizlabs/php_codesniffer": "*",
        "blastcloud/guzzler": ">=2.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "archive": {
        "exclude": ["tests/", ".github/", ".gitignore", "behat.yml", "phpunit.xml", "phpcs.xml"]
    }
}
